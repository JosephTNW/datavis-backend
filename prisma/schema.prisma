generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Datasets {
  id        String   @id @default(cuid()) @unique
  name      String   @unique
  route     String   @default("")
  data      Json[]   @default([])
  createdAt DateTime @default(now()) @db.Timestamptz()
  updatedAt DateTime @updatedAt @db.Timestamptz()
}

model Conversations {
  id        String   @id @default(cuid()) @unique
  name      String
  chat      String[] @default([])
  createdAt DateTime @default(now()) @db.Timestamptz()
  updatedAt DateTime @updatedAt @db.Timestamptz()
}

model Users {
  id        String    @id @default(cuid()) @unique
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now()) @db.Timestamptz()
  updatedAt DateTime  @updatedAt @db.Timestamptz()
  Sessions   Sessions[]
}

model Sessions {
  id        String   @id @default(cuid()) @unique
  user      Users    @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now()) @db.Timestamptz()
}
